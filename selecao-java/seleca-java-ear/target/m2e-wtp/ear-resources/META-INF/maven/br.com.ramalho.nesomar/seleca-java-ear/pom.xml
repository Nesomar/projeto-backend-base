<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>br.com.ramalho.nesomar</groupId>
    <artifactId>selecao-java</artifactId>
    <version>1.0.0</version>
  </parent>
  <artifactId>seleca-java-ear</artifactId>
  <packaging>ear</packaging>
  <name>selecao-java-ear</name>
  <description>Projeto que servir√° somente para efetuar o empacotemento do projeto</description>
  <build>
    <finalName>${project.parent.artifactId}</finalName>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <version>2.10.1</version>
        <configuration>
          <filtering>true</filtering>
          <defaultLibBundleDir>lib</defaultLibBundleDir>
          <generateApplicationXml>true</generateApplicationXml>
          <modules>
            <webModule>
              <groupId>br.com.ramalho.nesomar</groupId>
              <artifactId>selecao-java-rest</artifactId>
              <contextRoot>/selecao-java-backend</contextRoot>
            </webModule>
            <ejbModule>
              <groupId>br.com.ramalho.nesomar</groupId>
              <artifactId>selecao-java-service</artifactId>
            </ejbModule>
            <ejbModule>
              <groupId>br.com.ramalho.nesomar</groupId>
              <artifactId>selecao-java-persistence</artifactId>
            </ejbModule>
          </modules>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>br.com.ramalho.nesomar</groupId>
      <artifactId>selecao-java-persistence</artifactId>
      <version>${project.version}</version>
      <type>ejb</type>
    </dependency>
    <dependency>
      <groupId>br.com.ramalho.nesomar</groupId>
      <artifactId>selecao-java-service</artifactId>
      <version>${project.version}</version>
      <type>ejb</type>
    </dependency>
    <dependency>
      <groupId>br.com.ramalho.nesomar</groupId>
      <artifactId>selecao-java-rest</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>
  </dependencies>
</project>